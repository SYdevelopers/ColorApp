<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".activities.JuegoConfigActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingTop="40dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tiempoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="Tiempo"/>
            <TextView
                android:id="@+id/txtTiempoJuegoConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="22dp"/>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:id="@+id/txtintentosView"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="Intentos"/>
            <TextView
                android:id="@+id/txtIntentosJuegoConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="22dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingTop="40dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Movimientos"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtmovimientosConfig"
                android:gravity="center"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="Reaccion"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:id="@+id/txtReaccionConfig"
                android:gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPalabraConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="..."
            android:textColor="@android:color/black"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_pausarC"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:background="@drawable/play"
                android:onClick="pausarJuegoC" />

            <Button
                android:id="@+id/button_pausarCIntentos"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:background="@drawable/play"
                android:onClick="pausarJuegoCIntentos" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1Config"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:onClick="verificarRespuestaConfig"
            app:backgroundTint="@color/icons" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2Config"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:onClick="verificarRespuestaConfig"
            app:backgroundTint="@color/icons" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3Config"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:onClick="verificarRespuestaConfig"
            app:backgroundTint="@color/icons" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab4Config"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:onClick="verificarRespuestaConfig"
            app:backgroundTint="@color/icons" />

    </LinearLayout>



</LinearLayout>